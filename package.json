{
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.vue ./ --fix",
    "build": "nuxt build",
    "postbuild": "cd .output/server && rimraf node_modules && yarn && cd .. && yarn rename-server",
    "rename-server": "node scripts/rename-server.js",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "deploy": "yarn deploy:functions && yarn deploy:hosting",
    "deploy:functions": "firebase deploy --only functions:nuxtTailwindTemplateHandler -P mc-v4-prod --force",
    "deploy:hosting": "firebase deploy --only hosting -P mc-v4-prod --force"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@nuxtjs/tailwindcss": "^6.4.1",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "nuxt": "^3.2.3",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.12",
    "@heroicons/vue": "^2.0.16",
    "@tailwindcss/forms": "^0.5.3",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.1"
  },
  "name": "nuxt-tailwind-template",
